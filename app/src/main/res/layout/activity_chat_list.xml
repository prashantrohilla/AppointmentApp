<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chatapp.example.flamingoapp.phase2.ChatListActivity"
    android:background="@drawable/grad1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10mdp"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_18mdp"
            android:layout_height="@dimen/_18mdp"
            android:background="@drawable/arrow"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/search" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/your_messages"
            android:textColor="@color/white"
            android:textSize="@dimen/_16mdp"
            android:textStyle="bold"
            android:fontFamily="@font/oxygen"
            android:textAlignment="center"
            android:layout_weight="1"
            />

    </LinearLayout>


   <FrameLayout
       android:id="@+id/frameLayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

</LinearLayout>