<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chatapp.example.flamingoapp.phase1.ForgotPasswordActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/_30mdp"
        android:layout_marginStart="@dimen/_30mdp"
        android:gravity="center_horizontal"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30mdp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation"
                android:layout_width="@dimen/_150mdp"
                android:layout_height="@dimen/_120mdp"
                app:lottie_rawRes="@raw/password"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"

                />

        </LinearLayout>

        <EditText
            android:id="@+id/forgetemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_25mdp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_8mdp"
            android:background="@drawable/square"
            tools:ignore="Autofill"
            android:fontFamily="@font/oxygen"
            android:textColorHint="@color/quantum_grey600"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35mdp">

            <TextView
                android:id="@+id/forgotPasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35mdp"
                android:text="@string/forgotpassword2"
                android:textColor="@color/white"
                android:textSize="@dimen/_16mdp"
                android:textStyle="bold"
                android:background="@drawable/buttongrad1"
                android:fontFamily="@font/oxygen"
                android:textAlignment="center"
                android:padding="@dimen/_6mdp"
                android:textAllCaps="true"/>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <TextView
            android:id="@+id/backToLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/_1mdp"
            android:text="@string/backtologin"
            android:textColor="@color/blue"
            android:textSize="@dimen/_13font_mdp"
            android:fontFamily="@font/oxygen"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_30mdp"
            />

    </LinearLayout>

</LinearLayout>
