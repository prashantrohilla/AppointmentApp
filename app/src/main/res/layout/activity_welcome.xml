<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chatapp.example.flamingoapp.phase1.WelcomeActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation"
            android:layout_width="@dimen/_180mdp"
            android:layout_height="@dimen/_180mdp"
            app:lottie_rawRes="@raw/hello"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_margin="@dimen/_5mdp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16font_mdp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_18mdp"
        android:text="@string/verified"
        android:fontFamily="@font/oxygen"
        android:textColor="@color/blue"/>


    <TextView
        android:id="@+id/nextBtn"
        android:layout_width="@dimen/_120mdp"
        android:layout_height="@dimen/_35mdp"
        android:background="@drawable/buttongrad1"
        android:text="@string/continu"
        android:textAllCaps="true"
        android:textSize="@dimen/_14font_mdp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/_6mdp"
        android:fontFamily="@font/oxygen"/>











</LinearLayout>
