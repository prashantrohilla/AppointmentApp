<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userdetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_pic"
            android:layout_width="@dimen/_60mdp"
            android:layout_height="@dimen/_60mdp"
            android:src="@drawable/user2"
            app:civ_border_width="@dimen/_1mdp"
            app:civ_border_color="@color/white"
            android:layout_marginLeft="@dimen/_3mdp"
            android:layout_marginRight="@dimen/_3mdp"
            android:tint="@color/white"
            android:padding="@dimen/_3mdp"/>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/profile_pic"
            android:layout_marginTop="@dimen/_5mdp"
            android:layout_marginStart="@dimen/_5mdp">

            <TextView
                android:layout_width="@dimen/_150mdp"
                android:layout_height="wrap_content"
                android:id="@+id/userName"
                android:text="@string/username"
                android:textSize="@dimen/_14font_mdp"
                android:textStyle="bold"
                android:paddingTop="@dimen/_3mdp"
                android:paddingBottom="@dimen/_3mdp"
                android:fontFamily="@font/oxygen"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="@dimen/_150mdp"
                android:layout_height="wrap_content"
                android:id="@+id/fullName"
                android:text="@string/fullname"
                android:paddingTop="@dimen/_1mdp"
                android:paddingBottom="@dimen/_1mdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/oxygen"
                android:textSize="@dimen/_14font_mdp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/followButton"
            android:text="@string/follow"
            android:layout_width="@dimen/_70mdp"
            android:layout_height="wrap_content"
            android:background="@drawable/textback"
            android:paddingStart="@dimen/_10mdp"
            android:paddingEnd="@dimen/_10mdp"
            android:paddingTop="@dimen/_5mdp"
            android:paddingBottom="@dimen/_5mdp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14font_mdp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10mdp"
            android:visibility="gone"/>

    </RelativeLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2mdp"
        android:background="@color/white"/>

</LinearLayout>